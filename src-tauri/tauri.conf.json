{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JamDoc - Menos Redacción, Más Desarrollo.",
  "version": "0.1.0",
  "identifier": "com.samuel.jamdoc",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "JamDoc",
        "width": 1024,
        "height": 768,
        "minWidth": 970,
        "minHeight": 650
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
